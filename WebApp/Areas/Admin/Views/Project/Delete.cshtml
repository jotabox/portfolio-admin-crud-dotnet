@model Domain.Entities.Project

@{
    ViewData["Title"] = "Excluir Projeto";
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-danger">Excluir Projeto</h2>

<p>Tem certeza que deseja excluir o projeto abaixo?</p>

<div class="card p-4 shadow-sm">
    <h3>@Model.Title</h3>
    <p>@Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" width="200" />
    }
</div>

<form asp-area="Admin" asp-controller="Project" asp-action="DeleteConfirmed" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-area="Admin" asp-controller="Project" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
