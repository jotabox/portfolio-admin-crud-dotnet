@model Domain.Entities.Project

@{
    ViewData["Title"] = "Detalhes do Projeto";
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Detalhes do Projeto</h2>

<div class="card p-4 shadow-sm">

    <h3>@Model.Title</h3>
    <p class="text-muted">@Model.Description</p>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <strong>Tecnologias:</strong>
            <div>@Model.Technologies</div>

            <strong>GitHub:</strong>
            <div>
                <a href="@Model.GitHubUrl" target="_blank">@Model.GitHubUrl</a>
            </div>

            <strong>Demo:</strong>
            <div>
                <a href="@Model.DemoUrl" target="_blank">@Model.DemoUrl</a>
            </div>

            <strong>Publicado:</strong>
            <div>@(Model.IsPublished ? "Sim" : "Não")</div>

            <strong>Ordem:</strong>
            <div>@Model.Order</div>

            <strong>Criado em:</strong>
            <div>@Model.CreatedAt.ToLocalTime()</div>
        </div>

        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" />
            }
        </div>
    </div>

    <hr />

    <div class="mt-3">
        <a asp-area="Admin" asp-controller="Project" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-area="Admin" asp-controller="Project" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
